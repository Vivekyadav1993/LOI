<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_border_trans"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/dark_grey">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:id="@+id/pack_config_list_day"
            android:textSize="@dimen/text_small"
            android:background="@color/white"
            android:padding="10dp"

            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:id="@+id/pack_config_list_duration"
            android:textSize="@dimen/text_small"
            android:background="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_marginBottom="1dp"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/dark_grey">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:id="@+id/pack_config_list_class"
            android:textSize="@dimen/text_small"
            android:background="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:id="@+id/pack_config_list_cost"
            android:textSize="@dimen/text_small"
            android:background="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_marginBottom="1dp"

            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/dark_grey">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:id="@+id/pack_config_list_cancelbyvendor"
            android:textSize="@dimen/text_small"
            android:background="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:id="@+id/pack_config_list_cancelbycustomer"
            android:textSize="@dimen/text_small"
            android:background="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_marginBottom="1dp"

            />




    </LinearLayout>






</LinearLayout>