<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    app:elevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/serial_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/my_ads_address_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/serial_no"
            android:layout_toRightOf="@+id/serial_no"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
         <TextView
            android:id="@+id/my_ads_estimale_time_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
             android:layout_below="@+id/my_ads_address_item_tv"
            android:layout_toEndOf="@+id/serial_no"
            android:layout_toRightOf="@+id/serial_no"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
 <TextView
            android:id="@+id/my_ads_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
             android:layout_below="@id/my_ads_estimale_time_item_tv"
            android:layout_toEndOf="@id/serial_no"
            android:layout_toRightOf="@id/serial_no"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>