<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">




    // header layout
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/hesder_bg"
        android:padding="10dp">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/new_resinfo_back_btn"
            android:src="@drawable/leftarrow_white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/new_resinfo_back_btn"
            android:layout_toLeftOf="@+id/new_resinfo_next_btn"
            android:text=""
            android:textSize="@dimen/text_large"
            android:id="@+id/new_resinfo_tag"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="DONE"
            android:textColor="@color/white"
            android:id="@+id/new_resinfo_next_btn"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_large"
            android:padding="5dp"/>


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/new_resinfo_tag"
            android:src="@drawable/browse_pic"
            android:visibility="invisible"
            android:id="@+id/new_resinfo_browse_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>

    // Name layout

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:backgroundTint="@null"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="@dimen/text_medium"
                android:id="@+id/new_resinfo_name_input"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                />

        </android.support.design.widget.TextInputLayout>



    </RelativeLayout>

    // Details layout
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Details"
                android:backgroundTint="@null"
                android:inputType="text"
                android:imeOptions="actionDone"

                android:textSize="@dimen/text_medium"
                android:id="@+id/new_resinfo_details_input"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                />

        </android.support.design.widget.TextInputLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"></LinearLayout>




</LinearLayout>