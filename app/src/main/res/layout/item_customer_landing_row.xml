<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        style="@style/matchParentLayout"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/company_image_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/company_name_tv"
            style="@style/wrapTextInput"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/company_image_iv"
            android:layout_toRightOf="@id/company_image_iv"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/company_address_tv"
            style="@style/wrapTextInput"
            android:layout_below="@id/company_name_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="60dp"
            android:layout_toEndOf="@id/company_image_iv"
            android:layout_toRightOf="@id/company_image_iv"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/company_service_tv"
            style="@style/wrapTextInput"
            android:layout_below="@id/company_address_tv"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/company_image_iv"
            android:layout_toRightOf="@id/company_image_iv"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/company_open_time_text_tv"
            style="@style/wrapTextInput"
            android:layout_below="@id/company_service_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/company_image_iv"
            android:layout_toRightOf="@id/company_image_iv"
            android:background="@color/colorAccent"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="Open Now:"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/company_open_time_tv"
            style="@style/wrapTextInput"
            android:layout_below="@id/company_open_time_text_tv"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/company_image_iv"
            android:layout_toRightOf="@id/company_image_iv"
            android:background="@color/colorAccent"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/company_last_appointment_time_text_tv"
            style="@style/wrapTextInput"
            android:layout_below="@id/company_service_tv"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/company_open_time_text_tv"
            android:layout_toRightOf="@id/company_open_time_text_tv"
            android:background="@color/gray"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="Last Appointment:"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/company_last_appointment_time_tv"
            style="@style/wrapTextInput"
            android:layout_below="@id/company_open_time_text_tv"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/company_open_time_tv"
            android:layout_toRightOf="@id/company_open_time_text_tv"
            android:background="@color/gray"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="10sp"
            android:visibility="invisible" />


        <Button
            android:id="@+id/company_book_btn"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_above="@id/company_last_appointment_time_text_tv"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-condensed"
            android:background="@color/blue"
            android:text="Book"
            android:textColor="@color/standard_white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/company_call_btn"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue"
            android:text="Call"
            android:textColor="@color/standard_white"
            android:textSize="10sp"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>