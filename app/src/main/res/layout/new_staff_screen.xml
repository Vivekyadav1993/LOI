<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        // header layout

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/hesder_bg">


            <ImageView
                android:id="@+id/new_staff_back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:src="@drawable/leftarrow_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/new_staff_next_btn"
                android:layout_toRightOf="@+id/new_staff_back_btn"
                android:gravity="center"
                android:text="New Staff"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large" />

            <ImageView
                android:id="@+id/new_staff_next_btn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:tint="@color/white"
                android:src="@drawable/ic_navigate" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"

                android:text="Admin"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large" />

            <Switch
                android:id="@+id/new_staff_admin_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>


        // First name layout

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/new_staff_contact_icn">

                <EditText
                    android:id="@+id/new_staff_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/text_medium" />

            </android.support.design.widget.TextInputLayout>


            <ImageView
                android:id="@+id/new_staff_contact_icn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:src="@drawable/tele_icn" />
        </RelativeLayout>

        // Last name layout

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                >

                <EditText
                    android:id="@+id/new_staff_last_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/text_medium" />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>

        // phone layout

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/new_staff_phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number "
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/text_medium" />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>

        // Email layout

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/new_staff_email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email (Optional)"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/text_medium" />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>



        // address layout

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/new_staff_add_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address (Optional)"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="10"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/text_medium" />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>


    </LinearLayout>


</ScrollView>