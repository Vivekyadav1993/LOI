<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_grey">


        // header layout
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/hesder_bg">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:id="@+id/new_staff_back_btn"
                android:src="@drawable/leftarrow_white"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/new_staff_back_btn"
                android:layout_toLeftOf="@+id/new_staff_next_btn"
                android:text="New Staff"
                android:textSize="@dimen/text_large"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="NEXT"
                android:textColor="@color/white"
                android:id="@+id/new_staff_next_btn"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_large"
                android:padding="5dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textSize="@dimen/text_large"
                android:layout_alignParentLeft="true"

                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_staff_admin_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        // First name layout
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/new_staff_contact_icn"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:backgroundTint="@null"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/text_medium"
                    android:id="@+id/new_staff_name_input"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    />

            </android.support.design.widget.TextInputLayout>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tele_icn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/new_staff_contact_icn"
                android:layout_marginRight="5dp"/>


        </RelativeLayout>

        // Last name layout
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:backgroundTint="@null"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/text_medium"
                    android:id="@+id/new_staff_last_name_input"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    />

            </android.support.design.widget.TextInputLayout>




        </RelativeLayout>


        // Email layout
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email (Optional)"
                    android:backgroundTint="@null"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/text_medium"
                    android:id="@+id/new_staff_email_input"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    />

            </android.support.design.widget.TextInputLayout>



        </RelativeLayout>

        // phone layout
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number (Optional)"
                    android:backgroundTint="@null"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:maxLength="10"
                    android:textSize="@dimen/text_medium"
                    android:id="@+id/new_staff_phone_input"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    />

            </android.support.design.widget.TextInputLayout>



        </RelativeLayout>

        // address layout
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address (Optional)"
                    android:backgroundTint="@null"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:maxLength="10"
                    android:textSize="@dimen/text_medium"
                    android:id="@+id/new_staff_add_input"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    />

            </android.support.design.widget.TextInputLayout>



        </RelativeLayout>




    </LinearLayout>


</ScrollView>