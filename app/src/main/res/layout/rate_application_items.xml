<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="@color/tranparent_color">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@color/background_blue_color"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:src="@drawable/cancel"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="How was your experience?"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="Rate us"
                    android:textColor="@color/grey_300"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="3">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="match_parent" />


                    <LinearLayout
                        android:id="@+id/bad_smile_ll"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bad_iv"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:background="@drawable/bad_icon"
                            android:button="@null" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Bad"
                            android:textColor="@color/white" />

                    </LinearLayout>


                    <View
                        android:layout_width="35dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/okay_smile_ll"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/okay_iv"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:background="@drawable/okay_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Okay"
                            android:textColor="@color/white" />

                    </LinearLayout>


                    <View
                        android:layout_width="35dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/great_smile_ll"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/great_iv"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:background="@drawable/great_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Great"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1" />

                </LinearLayout>


                <Button
                    android:layout_width="180dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:background="@color/grey_300"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Submit"
                    android:textColor="@color/background_blue_color"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:background="@color/grey_300"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Later"
                    android:textColor="@color/background_blue_color"
                    android:textSize="17sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher" />


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>