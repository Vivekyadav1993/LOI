<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="frags.JoinedQueueFrag">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/hesder_bg">


        <ImageView
            android:id="@+id/frag_joined_queue_back_btn"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/leftarrow_white" />

        <TextView
            android:id="@+id/frag_toolbar_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_large" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag_toolbar_title_tv"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/frag_joined_queue_waiting_time_tv"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="272dp"
            android:gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:text="30 min"
            android:textColor="@color/amber_700" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="You have successfully entered Queue"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:tint="@color/gray" />


    <LinearLayout
        android:id="@+id/token_ll"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@color/amber_700"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/position_in_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appoitment_date_in_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/token_ll"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="Present Status"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/present_status_ll"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/tv2"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".43"
            android:background="@drawable/rectangle_background"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:text="Position in the Queue"
                android:textColor="@color/amber_700" />


            <TextView
                android:id="@+id/frag_joined_queue_position_in_queue_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".04" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".43"
            android:background="@drawable/rectangle_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/est_dummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:text="Estimated Time"
                android:textColor="@color/amber_700" />

            <TextView
                android:id="@+id/est_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".04" />

    </LinearLayout>

    <TextView
        android:id="@+id/frag_joined_queue_service_status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/present_status_ll"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/spinner_background"
        android:gravity="center"
        android:padding="8dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/frag_joined_queue_service_status_hide_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_joined_queue_service_status_tv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_background"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="gone"
        android:text="Thank You For Using Life On Internet"
        android:textColor="@color/wallet_holo_blue_light"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/frag_joined_queue_service_absent_hide_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_joined_queue_service_status_tv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="Booking cancelled due to non-avaliability "
        android:textColor="@color/wallet_holo_blue_light"
        android:textSize="16sp"
         android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="1">

        <Button
            android:id="@+id/frag_joined_queue_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight=".5"
            android:background="@color/colorPrimary"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <Button
            android:id="@+id/frag_joined_queue_push_back_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="5dp"
            android:layout_weight=".5"
            android:background="@color/colorPrimary"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Push Myself Back"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/frag_joined_queue_show_details_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="8dp"
            android:text="Show Details"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />


    </LinearLayout>


</RelativeLayout>
