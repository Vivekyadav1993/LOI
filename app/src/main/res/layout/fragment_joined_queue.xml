<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="frags.JoinedQueueFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/hesder_bg">


        <ImageView
            android:id="@+id/frag_joined_queue_back_btn"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/leftarrow_white" />

        <TextView
            android:id="@+id/frag_toolbar_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Tansen Academy"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag_toolbar_title_tv"
            android:gravity="center"
            android:text="Join the Queue"
            android:textColor="@color/white"
            android:id="@+id/textView2" />

        <TextView
            android:id="@+id/frag_joined_queue_waiting_time_tv"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="272dp"
            android:gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:text="30 min"
            android:textColor="@color/amber_700" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="You have successfully entered Queue"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:tint="@color/gray"
        android:src="@drawable/group_queue_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Your token No. is 305,Dated 25th Aug"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Present Status"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/present_status_ll"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".43"
            android:background="@drawable/rectangle_background"
            android:orientation="vertical">

            <TextView

                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="8dp"
                android:text="Position in the Queue"
                android:textColor="@color/amber_700" />


            <TextView
                android:id="@+id/frag_joined_queue_position_in_queue_tv"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="8dp"
                android:text="6/10"
                android:textColor="@color/amber_700" />


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".04" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".43"
            android:background="@drawable/rectangle_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="8dp"
                android:text="Est Waiting Time"
                android:textColor="@color/amber_700" />


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".04" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp">

        <Button
            android:id="@+id/frag_joined_queue_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginStart="54dp"
            android:background="@color/gray"
            android:text="Cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/frag_joined_queue_push_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="57dp"
            android:layout_marginStart="57dp"
            android:layout_toEndOf="@id/frag_joined_queue_cancel_btn"
            android:layout_toRightOf="@id/frag_joined_queue_cancel_btn"
            android:background="@color/amber_700"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Push Myself Back"
            android:textColor="@color/white" />


    </RelativeLayout>

    <Button
        android:id="@+id/frag_joined_queue_show_details_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Show Details"
        android:textColor="@color/white" />

</LinearLayout>
