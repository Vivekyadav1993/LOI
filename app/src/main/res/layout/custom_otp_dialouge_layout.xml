<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:id="@+id/dialog_otp_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/otp_dilg"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/item_otp_et"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/dialog_otp_title_tv"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:elevation="3dp"
        android:gravity="center"
        android:hint="Enter Otp Here"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:singleLine="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_otp_msg_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_otp_et"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Didn't get the OTP?"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/item_otp_resend_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_otp_msg_tv"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Resend"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/primary">

        <TextView
            android:id="@+id/item_otp_cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray" />

        <TextView
            android:id="@+id/item_otp_submit_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>