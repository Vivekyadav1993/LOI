<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical">


    // header layout

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/hesder_bg">


        <ImageView
            android:id="@+id/new_staffinfo_back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/leftarrow_white" />

        <TextView
            android:id="@+id/new_staffinfo_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/new_staffinfo_next_btn"
            android:layout_toRightOf="@id/new_staffinfo_back_btn"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="Ashok"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large" />

        <ImageView
            android:id="@+id/new_staffinfo_next_btn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/ic_navigate"
            android:layout_centerVertical="true"
            android:tint="@color/white" />


        <ImageView
            android:id="@+id/new_staffinfo_browse_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/new_staffinfo_tag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/browse_pic"
            android:visibility="invisible" />


    </RelativeLayout>


    <TextView
        android:id="@+id/new_staffinfo_workingdays_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:drawableRight="@drawable/next_icn_black"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Working Days"
        android:textColor="#000"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/new_staffinfo_breaks_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:drawableRight="@drawable/next_icn_black"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Breaks"
        android:textColor="#000"
        android:textSize="@dimen/text_medium" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"></LinearLayout>


</LinearLayout>