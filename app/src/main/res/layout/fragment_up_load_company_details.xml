<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="frags.UpLoadCompanyDetailsFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/hesder_bg">


            <ImageView
                android:id="@+id/company_details_upload_back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/leftarrow_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_large" />

            <Button
                android:id="@+id/upload_company_details_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="Update"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/company_details_profile_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_background_border"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/company_details_upload_company_email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Business Email"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:textStyle=""
            android:inputType="textEmailAddress"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/company_details_upload_company_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter business number"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:inputType="phone"
            android:maxLength="10"
            android:imeOptions="actionNext"
            android:textSize="14sp"
            android:textStyle=""
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/company_details_upload_company_key_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Key"
            android:imeOptions="actionNext"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle=""
            android:inputType="textMultiLine"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/company_details_upload_company_description_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:maxLines="15"
            android:gravity="top|left"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


</ScrollView>
