<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey"
        android:orientation="vertical">

        // header layout

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/hesder_bg">


            <ImageView
                android:id="@+id/add_service_back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/leftarrow_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/service_refress_page_iv"
                android:layout_toRightOf="@id/add_service_back_btn"
                android:gravity="center"
                android:text="Add The Service you offer"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large" />

            <ImageView
                android:id="@+id/service_refress_page_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:layout_toLeftOf="@id/add_service_next_btn"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_rotate"
                android:tint="@color/white" />

            android:textColor="@color/white"
            <ImageView
                android:id="@+id/add_service_next_btn"
                android:layout_height="52dp"
                android:layout_width="52dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_navigate"
                android:tint="@color/white"
                android:padding="10dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="+ Add More"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_medium"

                />


            <TextView
                android:id="@+id/add_service_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:padding="10dp"
                android:text="  Service"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_xlarge"
                android:textStyle="bold" />

        </RelativeLayout>


        <ListView
            android:id="@+id/add_service_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@color/grey"
            android:dividerHeight="1dp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/add_service_no_service_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="No service found"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>