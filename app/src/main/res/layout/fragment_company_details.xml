<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="frags.CompanyDetailsFrag">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/splash_logo"
            android:scaleType="fitXY"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/frag_company_details_company_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tansen Academy"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/frag_company_details_company_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delhi"
                    android:maxWidth="180dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_below="@id/frag_company_details_company_name_tv"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/frag_company_details_company_phone_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+91789456123"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/frag_company_details_company_address_tv"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/frag_company_details_company_email_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="info@info.com"
                    android:textColor="@color/black"

                    android:textSize="14sp"
                    android:layout_below="@id/frag_company_details_company_phone_tv"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/frag_company_details_company_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="21dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="6dp"
                    android:text="6:30 am"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignBaseline="@id/frag_company_details_company_phone_tv"
                    android:layout_alignBottom="@id/frag_company_details_company_phone_tv"
                    android:layout_alignEnd="@id/frag_company_details_company_time_tv"
                    android:layout_alignRight="@id/frag_company_details_company_time_tv"
                    android:background="@drawable/button_background"
                    android:text="Book"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:cardElevation="3dp"
            android:padding="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jazz, Hippop ,Disco"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textColor="@color/black"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:cardElevation="3dp"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Details sp[aksd  ok oreo kewo p kwerpo kwrok werkwowrkwerkwrkrwkrworkrwerwrkweorkkwrkkworkworkw owrrfkow pkrwrr"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"/>
                
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"></android.support.v7.widget.RecyclerView>

            </LinearLayout>




        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Join the queue"
            android:layout_marginTop="15dp"
            android:background="@color/blue"
            android:textColor="@color/white"/>

    </LinearLayout>



</ScrollView>
