<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_grey">




        // header layout
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/hesder_bg">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:id="@+id/new_ctg_back_btn"
                android:src="@drawable/leftarrow_white"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/new_ctg_back_btn"
                android:layout_toLeftOf="@+id/new_ctg_next_btn"
                android:text="Choose  Services"
                android:textSize="@dimen/text_large"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="SAVE"
                android:textColor="@color/white"
                android:id="@+id/new_ctg_next_btn"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_large"
                android:padding="5dp"/>


        </RelativeLayout>



        // Name layout

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"   android:visibility="gone"

            android:layout_marginBottom="1dp"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"

                    android:backgroundTint="@null"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/text_medium"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    />

            </android.support.design.widget.TextInputLayout>



        </RelativeLayout>

        // Detail layout

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_marginBottom="1dp"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Detail"
                    android:backgroundTint="@null"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/text_medium"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    />

            </android.support.design.widget.TextInputLayout>



        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   Service"
            android:padding="10dp"
            android:textColor="#000"
            android:id="@+id/new_ctg_service_btn"
            android:drawableRight="@drawable/next_icn_black"
            android:background="@color/white"
            android:textSize="@dimen/text_medium"
            android:gravity="center_vertical"
            android:layout_marginBottom="1dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"></LinearLayout>



    </LinearLayout>




</LinearLayout>